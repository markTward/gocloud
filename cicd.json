{
  "app": {
    "repo": "markTward/gocloud",
    "name": "gocloud"
  },
  "config": {
    "debug": false,
    "enabled": true,
    "dryrun": false,
    "provider": {
      "platform": {
        "enabled": true,
        "id": "gke"
      },
      "ci": {
        "enabled": true,
        "id": "travis"
      },
      "registry": {
        "enabled": true,
        "id": "docker"
      },
      "cd": {
        "enabled": true,
        "id": "helm"
      }
    }
  },
  "provider": {
    "cicd": {
      "repo": "https://github.com/markTward/gocloud-cicd.git",
      "clonedir": "github.com/markTward/gocloud-cicd",
      "branch": "master"
    },
    "ci": {
      "travis": {
        "name": "travis"
      }
    },
    "platform": {
      "gke": {
        "project": "k8sdemo-159622",
        "cluster": "k0",
        "name": "gke",
        "context": "gke_k8sdemo-159622_us-west1-a_k0",
        "computezone": "us-west1-a",
        "keyfile": "./client-secret.json"
      },
      "minikube": {
        "name": "minikube",
        "context": "minikube"
      }
    },
    "registry": {
      "docker": {
        "repo": "gocloud",
        "account": "marktward",
        "name": "docker",
        "url": "docker.io/marktward/gocloud",
        "host": "docker.io",
        "description": "Docker Hub"
      },
      "gcr": {
        "repo": "gocloud",
        "project": "k8sdemo-159622",
        "host": "gcr.io",
        "name": "gcr",
        "url": "gcr.io/k8sdemo-159622/gocloud",
        "keyfile": "./client-secret.json",
        "description": "Google Container Registry"
      }
    },
    "cd": {
      "helm": {
        "version": "v2.4.2",
        "values": {
          "overrides": {
            "platform": {
              "minikube": {
                "servicetype": "NodePort"
              }
            }
          },
          "template": "./helm/runtime_values.tpl"
        },
        "name": "helm",
        "release": "gocloud",
        "chartpath": "helm/gocloud/",
        "namespace": "gocloud"
      }
    }
  }
}